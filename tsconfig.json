{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build/",
    "baseUrl": "./src/",
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules/**/*",
    // "build"
  ]
}
